@model MvcTest.Models.Employee

@{ ViewData["Title"] = "Change Icon"; }

<h1>Icon</h1>

<hr />

<img
     src="/File?id=@Html.DisplayFor(model => model.PhotoFileName)"
     id="sample"
     class="icon_preview active"
     style="height: 150px; width: 150px;"
     />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Employee" asp-action="IconChange">

            <div class="form-group">
                <div class="form-group">
                    <label class="file_label linkbtn info">
                        Select Your Icon Image
                        <input id="file" type="file" name="file" class="form-control" />
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Change" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>const img = document.querySelector('#sample');
        const file = document.querySelector('#file');
        file.addEventListener('change', e => {
            img.classList.remove('active');
            const r = new FileReader();
            const f = e.target.files[0];
            r.addEventListener('load', e => {
                img.src = e.target.result;
                img.classList.add('active');
            });
            r.readAsDataURL(f);
        });</script>
}